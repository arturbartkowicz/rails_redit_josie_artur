<p id="notice"><%= notice %></p>

<p>
    <strong>Title:</strong>
    <%= @post.title %>
</p>

<p>
    <strong>Body:</strong>
    <%= @post.body %>
</p>
<div class="comments">
  <h1>Comments</h1>
  <!-- The `comments` method returns an array-like collection, so we can call `each` on it: -->
  <% @post.comments.each do |comment| %>
    <div class="individual_comments">
      <strong><%= comment.name %> says:</strong>
      <%= comment.content %>
    </div>
  <% end %>
</div>

<%= form_for ([@post, @post.comments.new]) do |f| %>
  <p>
  <%= f.label :content, "New Comment" %><br/>
  <%= f.text_area :content %>
  </p>
  <p><%= f.submit "Add Comment"%></p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) if policy(@post).update? %> |
<%= link_to 'Back', posts_path %>
<%= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: "Are you sure?" } if policy(@post).destroy? %>